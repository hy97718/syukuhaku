<h2 class="detail">設定</h2>
<div class="table-container">
	<table class="table-left">
	<tbody>
		<tr>
			<td><%= link_to "アカウント", user_acount_path, class: "link-design"%></td>
		</tr>
		<tr>
			<td><%= link_to "プロフィール", user_path(current_user), class: "link-design" %></td>
		</tr>
	</tbody>
	</table>

	<table class="table is-fullwidth">
	<tbody>
		<tr>
			<td>プロフィール</td>
			<td>
			<span class="icon">
			<i class="fas fa-pen"></i>
			</span>
			<%= link_to "編集", edit_user_path%> 
			</td>
		</tr>
		<tr>
			<td style="border-bottom: none;">アイコン画像</td>
			<td style="border-bottom: none;">
				<% if current_user.image %>
        <% if current_user.image.attached? %>
          <%= image_tag current_user.image, class:"user-icon"%>
        <% else %>
          <img src="https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png" alt="画像がありません">
        <% end %>   
      <% end %>   
      </td>
			</td>
		</tr>
		<tr>
			<td>名前</td>
			<td><%= current_user.username %></td>
		</tr>
        <tr>
			<td>自己紹介</td>
			<td><%= current_user.profile %></td>
		</tr>
	</tbody>
	</table>
</div>
