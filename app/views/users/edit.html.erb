<div class="container">
  <div class="icon-content">
    <p class="text is-size-4">現在のアイコン</p>
    <% if @user.image.attached? %>
      <%= image_tag @user.image.variant(resize: "100x100") %>
    <% else %>
      <%= image_tag 'no-image.png'%>
    <% end %>
  </div>
  <%= form_with model: @user,local: true do |f| %>
    <div class="field">
      <%= f.label "アイコン画像" %>
      <i class="fas fa-upload"></i>
      <%= f.file_field :image %>
    </div>
      <div class="field">
      <%= f.label "ユーザー名", class: "label" %>
      <%= f.text_field :username, class: "input" %>
    </div>
    <div class="field">
      <%= f.label "プロフィール", class: "label" %>
      <%= f.text_area :profile, class: "textarea" %>
    </div>

    <div class="field">
      <%= f.submit "更新", class: "button is-success" %>
      <%= link_to "戻る", :back, class: "button is-light" %>
    </div>
  <% end %>
</div>
