<h1>予約確認画面</h1>
<!-- 表示する内容 -->
<div class="container">
	<div class="field">
		<p>チェックイン</p>
		<%= @reservation.room_check_in.strftime("%Y/%m/%d ") %>
	</div>
	<div class="field">
		<p>チェックアウト</p>
		<%= @reservation.room_check_out.strftime("%Y/%m/%d ") %>
	</div>
	<div class="field">
  	<p>宿泊日数: <%= "#{@days}日" %></p>
	</div>
	<div class="field">
		<p>予約人数: <%= "#{@reservation.number_of_reserve}人" %></p>
	</div>
	<div class="field">
		<p>合計金額: <%= @price.to_s(:delimited) %></p>
	</div>
</div>

<!-- 送信する内容 -->
<%= form_with model: @reservation, local: true do |f| %>
<div class="field">
	<%= f.hidden_field :room_check_in %>
</div>
<div class="field">
	<%= f.hidden_field :room_check_out %>
</div>
<div class="field">
	<%= f.hidden_field :number_of_reserve %>
</div>
<div class="field">
  <%= f.hidden_field :room_id, value: @reservation.room_id %>
</div>
<div class="field">
  <%= f.hidden_field :user_id, value: @reservation.user_id %>
</div>

<%= f.submit "予約を確定", class: "button is-success" %>
<% end %>
<%= link_to "キャンセル", :back, class: "button is-light" %>