<div class="container">
	<div class="reservation-container">
		<h1 class="detail">予約済み一覧</h1>
		<% @reservations.each do |reservation|%>
		<table class="table is-fullwidth" >
		<tbody>
			<tr>
				<td>部屋</td>
				<td>施設名</td>
				<td>紹介文</td>
				<td>合計料金</td>
				<td>チェックイン</td>
				<td>チェックアウト</td>
				<td>予約確定日時</td>
			</tr>
			<tr>
				
				<td>
				<% if reservation.room.room_image.attached? %>
					<%= image_tag reservation.room.room_image.variant(resize: "100x100"), class:"image-content" %>
				<% else %>
					<%= image_tag 'hotel_image.png', size: "100x100" %>
				<% end %>
				</td>
				<td><%= reservation.room.room_title %></td>
				<td class="room-info"><%= reservation.room.room_info %></td>
				<td><%= "¥#{reservation.sum_of_price.to_s(:delimited)}円" %></td>
				<td><%= reservation.room_check_in.strftime("%Y/%m/%d") %></td>
				<td><%= reservation.room_check_out.strftime("%Y/%m/%d") %></td>
				<td><%= reservation.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></td>
			</tr>
		</tbody>
		</table>
		<% end%>
	</div>
</div>
<%= render '/devise/shared/footer' %>
