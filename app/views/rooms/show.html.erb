<div class="container">
	<div class="room-container">
		<i class="fa fa-arrow-left"></i>
		<%= link_to "戻る", :back %><br>
		<div class="room-details">
			<% if @room.room_image.attached? %>
				<%= image_tag @room.room_image.variant(resize: "600x600"), class:"image-content"%>
				<% else %>
				<%= image_tag 'hotel_image.png', size: "600x600" %>
			<% end %>
			<div class="detail-body">
				<% if @room.user.id == current_user.id%>
					<%= link_to '編集', edit_room_path(@room), class: "button is-success" %>
				<% end %>
				<p class="title is-4"><%= @room.room_title %></p>
				<%= "¥#{@room.room_price.to_s(:delimited)}円〜" %>
				<p class="address has-text-grey"><%= @room.address %><p>
				<p class="descrpiption is-2"><%= simple_format @room.room_info %><p>
				<%= render '/devise/shared/reservation_form' %>
			</div>
		</div>
	</div>	
</div>
<%= render '/devise/shared/footer' %>
