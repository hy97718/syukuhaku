<div class="container">
	<div class="columns is-centered">
		<div class="colum">
			<i class="fa fa-arrow-left"></i>
			<%= link_to "戻る", :back %>
			<% if @room.room_image.attached? %>
				<%= image_tag @room.room_image.variant(resize: "300x300"), class:"image-content"%>
				<% else %>
				<%= image_tag 'hotel_image.png', size: "300x300" %>
			<% end %>
		</div>
		<div class="colum">
			<% if @room.user.id == current_user.id%>
				<%= link_to '編集', edit_room_path(@room), class: "button is-success" %>
			<% end %>
		<p class="title is-4"><%= @room.room_title %></p>

		<%= @room.room_price.to_s %>

		<p class="address has-text-grey"><%= @room.address %><p>

		<p class="descrpiption is-2"><%= simple_format @room.room_info %><p>

		</div>
	</div>
</div>
