<div class="container">
	<div class="room-container">
    <% @rooms.each do |room| %>
    <table class="table is-fullwidth" >
      <tbody>
        <tr>
          <td>画像</td>
          <td>施設名</td>
          <td>施設の詳細</td>
          <td>料金</td>
          <td>作成日</td>
          <td></td>
        </tr>
        <tr>
          <td>
            <% if room.room_image.attached? %>
              <%= image_tag room.room_image.variant(resize: "100x100"), class:"image-content"%>
            <% else %>
              <%= image_tag 'hotel_image.png', size: "100x100" %>
            <% end %>
          </td>
          <td>
            <%= link_to room_path(room) do%>
              <%= room.room_title%></td>
            <% end%>
          <td><%= simple_format room.room_info%></td>
          <td><%= "¥#{room.room_price}~"%></td>
          <td><%= room.created_at.strftime("%Y/%m/%d ")%></td>
          <td>
            <i class="link-icon fas fa-list"></i>
            <p class="room-link">
              <%= link_to "編集", edit_room_path(room) %><br>
              <%= link_to "削除", room_path(room), method: :delete, data: {confirm: "削除しますか？"} %>
            </p>
          </td>
        </tr>
      </tbody>
    </table>
    <% end%>
  </div>
</div>
<script type="text/javascript">
$(function(){
  //.accordion_menuの中の.accordion_headerがクリックされたら
  $('.link-icon').click(function(){
    //クリックされた.accordion_menuの中の.accordion_headerに隣接する.accordion_innerが開いたり閉じたりする。
    $(this).next('.room-link').slideToggle();
    $(this).toggleClass("open");
  });
});
</script>
